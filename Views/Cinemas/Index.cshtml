@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "Cinemas";
}

<div class="row">
    <div class="col-md-9 offset-md-2 bg-white rounded  p-1">
        <table class="table table-hover">
            <thead>
                <tr style="background-color:aqua" class=" rounded ">
                    <th class="align-middle">Profile Picture</th>
                    <th class="align-middle">Full Name</th>
                    <th class="align-middle">Bio</th>
                    <th class="align-middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="tr_item">
                        <td><img src="~/images/cinemas/@Url.Content(item.CinemaLogo)" class="border rounded-circle " width="150" alt="Profile" /></td>
                        <td class="align-middle">@item.Name</td>
                        <td class="align-middle">@item.Discription</td>
                        <td class="align-middle">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-Id="@item.Id">Edit</a> |
                            <a class="btn btn-danger btn_delete" href="javascript:;" data-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div style="position:fixed; right:30px ; bottom:13px; z-index:1000;">
    <a class="btn btn-success" asp-controller="Cinemas" asp-action="Create"><i class="bi bi-plus-circle"></i> Add New</a>
</div>


@section Scripts{

    <script>

        $(document).ready(function () {
            $(".btn_delete").on("click", function () {
                var btn = $(this);

                var result = confirm("Are you sure to delete this item ?");
                if (result) {
                    $.ajax({
                        url: 'Cinemas/Delete/' + btn.data("id"),
                        success: function () {
                            btn.parents('.tr_item').fadeOut();
                        },
                        error:
                            function () {
                                confirm("Some This is Wrong");
                            }
                    })
                }
            });
        })
    </script>

}
